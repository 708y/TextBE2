<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.be.textbe.bt.textbt.resource.bt.mopp.BtMetaInformation" id="org.be.textbe.bt.textbt.resource.bt.mopp.BtMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.be.textbe.bt.textbt.resource.bt.ui.BtEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="bt" icon="icons/editor_icon.gif" id="org.be.textbe.bt.textbt.resource.bt.ui.BtEditor" name="EMFText bt Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.be.textbe.bt.textbt.resource.bt.ui.BtPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Bt Text Editor" id="org.be.textbe.bt.textbt.resource.bt.ui.BtPreferencePage" class="org.be.textbe.bt.textbt.resource.bt.ui.BtPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.be.textbe.bt.textbt.resource.bt.ui.BtSyntaxColoringPreferencePage" class="org.be.textbe.bt.textbt.resource.bt.ui.BtSyntaxColoringPreferencePage" category="org.be.textbe.bt.textbt.resource.bt.ui.BtPreferencePage">
		</page>
		<page name="Brackets" id="org.be.textbe.bt.textbt.resource.bt.ui.BtBracketPreferencePage" class="org.be.textbe.bt.textbt.resource.bt.ui.BtBracketPreferencePage" category="org.be.textbe.bt.textbt.resource.bt.ui.BtPreferencePage">
		</page>
		<page name="Occurrence" id="org.be.textbe.bt.textbt.resource.bt.ui.BtOccurrencePreferencePage" class="org.be.textbe.bt.textbt.resource.bt.ui.BtOccurrencePreferencePage" category="org.be.textbe.bt.textbt.resource.bt.ui.BtPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.be.textbe.bt.textbt.resource.bt.ui.BtNewFileWizard" id="org.be.textbe.bt.textbt.resource.bt.ui.BtNewFileWizard" name="EMFText .bt file">
		</wizard>
	</extension>
	
	<extension id="org.be.textbe.bt.textbt.resource.bt.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension id="org.be.textbe.bt.textbt.resource.bt.nature" name="bt nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.be.textbe.bt.textbt.resource.bt.mopp.BtNature" />
		</runtime>
		<builder id="org.be.textbe.bt.textbt.resource.bt.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.be.textbe.bt.textbt.resource.bt.builder" name="bt Builder">
		<builder hasNature="true">
			<run class="org.be.textbe.bt.textbt.resource.bt.mopp.BtBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.be.textbe.bt.textbt.resource.bt.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.be.textbe.bt.textbt.resource.bt.mopp.BtResourceFactoryDelegator" type="bt">
		</parser>
	</extension>
	
	<extension-point id="org.be.textbe.bt.textbt.resource.bt.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
